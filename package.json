{
  "name": "webpack4-starter",
  "version": "0.0.1",
  "description": "Webpack 4 Starter w/ Babel Integration",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run clear && webpack --hide-modules --mode production",
    "clear": "rm -rf ./public/js",
    "dev": "webpack --hide-modules --mode development",
    "dev:watch": "webpack --watch --mode development --hide-modules",
    "lint": "eslint \"./src/**/*.js\"",
    "prod": "npm run build",
    "serve": "lite-server --baseDir=\"public\"",
    "test": "echo \"Error: No Tests Specified\" && exit 1"
  },
  "author": "Mike Erickson <codedungeon@gmail.com> (https://github.com/mikeerickson)",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/preset-env": "7.1.0",
    "@babel/register": "7.0.0",
    "babel-loader": "8.0.4",
    "eslint": "5.6.1",
    "lite-server": "2.4.0",
    "progress-bar-webpack-plugin": "1.11.0",
    "webpack": "4.20.2",
    "webpack-cli": "3.1.2",
    "webpack-notifier": "1.6.0"
  },
  "dependencies": {
    "cd-messenger": "2.7.26",
    "chalk": "2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikeerickson/webpack4-starter"
  },
  "bugs": {
    "url": "https://github.com/mikeerickson/webpack4-starter/issues"
  },
  "homepage": "https://github.com/mikeerickson/webpack4-starter#readme"
}